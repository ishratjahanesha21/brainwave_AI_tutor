{
    "version": 2,
    "builds": [
      {
        "src": "vite.config.*",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "rewrites": [
      { "source": "/(.*)", "destination": "/" }
    ],
    "env": {
      "VITE_API_BASE_URL": "https://brainwave-backend-1.onrender.com/api"
    }
  }
  